<div class="container">
    <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>

    </div>

<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Products</th>
      <th scope="col">Category</th>
      <th scope="col">discription</th> 
      <th scope="col">Image</th>
      <th scope="col">Price</th>
      <th scope="col">EDIT</th>
      <th scope="col">DELETE</th>

    </tr>
  </thead>
  <tbody>
    {{#each products}}
    
    <tr>
      <th scope="row">#</th>
      <td>{{this.productName}}</td>
      <td>{{this.productCategory}}</td>
      <td>{{this.productDescription}}</td>
      
      <td ><img style=" width: 50px; height: 50px" src="/product-images/{{this._id}}.jpg"></td>
      <td>{{this.productPrice}}</td>
      <td><a href="admin/edit-product/{{this._id}}" class="btn btn-primary">EDIT</a></td>
      <td><a href="admin/delete-product/{{this._id}}" class="btn btn-danger " onclick="return confirm('Are you want to delete {{this.productName}} ?')">DELETE </a></td>
    </tr>
    
    
{{/each}}
  </tbody>
</table>
</div>